<% layout('layouts/boilerplate') %>
<%- include('../partials/flash.ejs')%>
        <div class="row">
                <div class="col-md-6 mx-auto">
                    <h1>Sign Up</h1>
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username:</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="username">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email:</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="email">
                        </div>
                        <div class="mb-3">
                            <p class="mb-2">Want to register as: </p>
                            <div class="mx-2">
                                <label class="form-label" for="buyer">Buyer:</label>
                                <input class="form-check-input" type="radio" name="role" value="buyer" id="buyer">
                            </div>
                            <div class="mx-2">
                                <label class="form-label" for="seller">Seller:</label>
                                <input class="form-check-input" type="radio" name="role" value="seller" id="seller">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password:</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="password">
                        </div>
                        <button class="btn btn-sm btn-success">Sign Up</button>
                        <p class="fw-light mt-2">Already have an account <a href="/login">Login</a>
                    </form>
                </div>

         </div>
    
    
</body>
</html>